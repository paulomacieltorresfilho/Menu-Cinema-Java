package Controller;

import java.util.ArrayList;

import Model.Movie;
import Model.Snack;

public class SnackController implements Entity {
	private ArrayList<Snack> SnackList;

	
	
	
	
	public ArrayList<Snack> getFilms() {
		return SnackList;
	}
	public String[] getName(String[] SnacksName) {
		for(int i = 0; i < SnackList.size(); i++) {
			Snack aux;
			
			aux = SnackList.get(i);
			SnacksName[i] = aux.getName();
		}
		return SnacksName;
	}

	@Override
	public void register(int pos, Object film) {
		SnackList.add(pos, (Snack) film);		
	}

	@Override
	public void update(int option, Object e) {
		// TODO Auto-generated method stub	
	}
	public void update(ArrayList<Snack> snackList) {
		this.SnackList = snackList;
	}

	@Override
	public String[] view(String[] SnacksName) {
		for(int i = 0; i < SnackList.size(); i++) {
			Snack aux;
			
			aux = SnackList.get(i);
			SnacksName[i] = aux.getName();
		}
		return SnacksName;
		
	}
	@Override
	public void delete(int pos) {
		SnackList.remove(pos);
	}
	
}
