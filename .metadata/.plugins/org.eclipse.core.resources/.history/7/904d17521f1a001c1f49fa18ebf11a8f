package Controller;

import java.util.ArrayList;

import Model.Movie;

public class MovieController implements Entity{
	ArrayList<Movie> films = new ArrayList<Movie>();
	
	public MovieController() {		
		//Dados aleatorios
		ArrayList<Movie> filmes = new ArrayList<Movie>();
		for(int i=0; i < 5; i++) {
			Movie aux = new Movie(i, "nome-"+i, "qualquercoisa", "Ação", (120+i));
			filmes.add(aux);
		}
		//end
		this.films = filmes;
	}
	
	public ArrayList<Movie> getFilms() {
		return films;
	}
	public String[] getName(String[] filmsName) {
		for(int i = 0; i < films.size(); i++) {
			Movie aux;
			
			aux = films.get(i);
			filmsName[i] = aux.getName();
		}
		return filmsName;
	}
	public void register(int pos, Movie film) {
		films.add(pos, film);
	}
	public void delete(int pos) {
		films.remove(pos);
	}
	public void update(ArrayList<Movie> films) {
		this.films = films;
	}
	
}
