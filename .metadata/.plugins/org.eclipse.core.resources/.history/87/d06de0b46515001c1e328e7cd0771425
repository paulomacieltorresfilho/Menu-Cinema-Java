package View;

import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.ArrayList;

import javax.swing.*;

import Model.Calender;
import Model.Movie;

public class Menu implements ActionListener {
	private JFrame menu = new JFrame("Menu do Cinema");
	private JLabel title = new JLabel("Cinema Opções");
	private JButton btMovie = new JButton("Filmes");
	private static JButton btSession = new JButton("Sessões");
	
	private static Calender calDate = new Calender();
	
	public Menu() {
		title.setFont(new Font("Arial", Font.BOLD, 18));
		title.setBounds(120,10,150,30);
		btMovie.setBounds(140,50,100,30);
		btSession.setBounds(140,100,100,30);
		
		
		menu.add(title);
		menu.add(btMovie);
		menu.add(btSession);
		
		menu.setLayout(null);
		menu.setSize(400,250);
		//menu.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		menu.setVisible(true);
	}

	public static void main(String[] args) {
		Menu menu = new Menu();
			
		//Dados aleatorios
		ArrayList<Movie> filmes = new ArrayList<Movie>();
		for(int i=0; i < 5; i++) {
			Movie aux = new Movie(i, "nome-"+i, "qualquercoisa", "Ação", 120+i);
			filmes.add(aux);
		}
		calDate.setInTheaters(filmes);
		//end
		
		btMovie.addActionListener(menu);
		btSession.addActionListener(menu);
	}
	
	
	@Override
	public void actionPerformed(ActionEvent e) {
		Object src = e.getSource();
		
		if (src == btMovie) {
			new MovieScreen().showDate(calDate);
		}
		if (src == btSession) {
			JOptionPane.showMessageDialog(null, "Comando está em construção!");
		}
	
		
	}
}
