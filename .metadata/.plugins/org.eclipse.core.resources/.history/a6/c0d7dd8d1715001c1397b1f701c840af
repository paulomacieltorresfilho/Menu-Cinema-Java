	public String toString() {
		String s = "";
		s += "Nome: " + this.films.name + "\n";
		s += "Sinopse: " + this.synopsis + "\n";
		s += "Gênero: " + this.genre + "\n";
		s += "Duração: " + this.duration;
		return s;
	}

