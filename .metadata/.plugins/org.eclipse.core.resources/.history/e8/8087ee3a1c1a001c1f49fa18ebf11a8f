package Controller;

import java.util.ArrayList;

import Model.Movie;

public class MovieController {
	ArrayList<Movie> films = new ArrayList<Movie>();
	
	public MovieController() {		
		//Dados aleatorios
		ArrayList<Movie> filmes = new ArrayList<Movie>();
		for(int i=0; i < 5; i++) {
			Movie aux = new Movie(i, "nome-"+i, "qualquercoisa", "Ação", (120+i));
			filmes.add(aux);
		}
		//end
		this.films = filmes;
	}
	
	public ArrayList<Movie> getFilms() {
		return films;
	}
	public void registerFilm(Movie film, int pos) {
		films.add(pos, film);
	}
	public void removeFilm(int pos) {
		films.remove(pos);
	}
	 
	@Override
	public void register() {
		// TODO Auto-generated method stub
		
	}	
	
}
